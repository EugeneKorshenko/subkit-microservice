<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Editor</title>
  <style type="text/css" media="screen">
  body {
      overflow: hidden;
  }

  #editor { 
      margin: 0;
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
  }
  </style>
  <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.1.5/angular.min.js"></script>
  <script src="/subkit.js"></script>
  <script src="/angularsubkit.js"></script>
</head>
<body style="background-color:black;">
<div data-ng-app="editor" data-ng-controller="Editor">
  <input type="text" data-ng-model="name">
  <button data-ng-click="openTemplate()"><i>open</i></button>
  <button data-ng-click="saveTemplate()"><i>save</i></button>
<!--   <button data-ng-click="saveTemplate()"><i>save as static</i></button>
  <button data-ng-click="saveTemplate()"><i>save as JS template</i></button>
  <button data-ng-click="saveTemplate()"><i>save as Markdown template</i></button>
  <button data-ng-click="saveTemplate()"><i>save as JSON</i></button>
  <button data-ng-click="saveTemplate()"><i>save as JS Task</i></button>
  <button data-ng-click="runTemplate()"><i>run</i></button> -->
</div>
<pre id="editor" style="top: 40px;">&nbsp;</pre>
<script src="public/lib/ace/ace.js" type="text/javascript" charset="utf-8"></script>
<script>
    var editor = ace.edit("editor");
    editor.setTheme("ace/theme/twilight");
    editor.getSession().setMode("ace/mode/html");      
</script>
<script>
  angular.module('editor', ['subkit']).controller('Editor', ['$scope', 'angularSubkit', function($scope, angularSubkit) {
      var subkit = new Subkit({ baseUrl: "@locals.url", apiKey: "@locals.apiKey" });

      $scope.saveTemplate = function(){
        var file = new Blob([editor.getValue()]);
        file.name = $scope.name;
        subkit.upload(file, function(err, data){});
      };
      $scope.openTemplate = function(){
        subkit.download($scope.name, function(err, data){
          editor.setValue(data);        
        });
      };
      $scope.getFiles = function() {
        subkit.get("files", function(err, data){
          $scope.files = data;
          $scope.$apply();
        });
      };
      $scope.deleteFile = function(file){
        subkit.remove("file/" + file);
        $scope.getFiles();
      };
  }]);
</script>

</body>
</html>
