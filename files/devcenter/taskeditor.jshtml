<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Task Editor</title>
  <style type="text/css" media="screen">
    body {
        overflow: hidden;
    }

    #editor { 
        margin: 0;
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
    }
  </style>
  <script src="public/lib/ace/ace.js" type="text/javascript" charset="utf-8"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.1.5/angular.min.js"></script>
  <script src="/subkit.js"></script>
  <script src="/angularsubkit.js"></script>
</head>
<body style="background-color:black;">
<div data-ng-app="editor" data-ng-controller="Editor">
  <span style="color:white;">Task Editor</span>
  <input type="text" data-ng-model="name">
  <button data-ng-click="openTask()"><i>open</i></button>
  <button data-ng-click="saveTask()"><i>save</i></button>
  <button data-ng-click="deleteTask()"><i>del</i></button>
  <button data-ng-click="runTask()"><i>run</i></button>
</div>
<pre id="editor" style="top: 40px;"></pre>
<script>
  var editor = ace.edit("editor");
  editor.setTheme("ace/theme/twilight");
  editor.getSession().setMode("ace/mode/html");
  angular.module('editor', ['subkit']).controller('Editor', ['$scope', 'angularSubkit', function($scope, angularSubkit) {
      var subkit = new Subkit({ baseUrl: "@locals.url", apiKey: "@locals.apiKey" });

      $scope.saveTask = function(){
        var file = new Blob([editor.getValue()]);
        file.name = $scope.name;
        subkit.upload(file, "task", function(err, data){});
      };
      $scope.openTask = function(){
        subkit.download($scope.name, "task", function(err, data){
          editor.setValue(data);        
        });
      };
      $scope.getTasks = function() {
        subkit.get("tasks", function(err, data){
          $scope.files = data;
          console.log(data);
          $scope.$apply();
        });
      };
      $scope.deleteTask = function(){
        subkit.delete($scope.name, "task");
        $scope.getTasks();
      };
  }]);
</script>

</body>
</html>
