<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Template Editor</title>
  <style type="text/css" media="screen">
    body {
        overflow: hidden;
    }
    #editor { 
        margin: 0;
        position: absolute;
        width:50%;
        top: 40px;
        bottom: 0;
        left: 0;
        right: 0;
    }
    .preview {
      position: absolute;
      top: 40px;
      left: 50%;
      width: 50%;
      height: 100%;
      background-color: white;
    }
  </style>
  <script src="public/lib/ace/ace.js" type="text/javascript" charset="utf-8"></script>
  <script src="public/lib/angularjs/angular.min.js" type="text/javascript" charset="utf-8"></script>
  <script src="/subkit.js"></script>
  <script src="/angularsubkit.js"></script>
</head>
<body style="background-color:black;">
<div data-ng-app="editor" data-ng-controller="Editor">
  <span style="color:white;">Template Editor</span>
  <input type="text" data-ng-model="name">
  <button data-ng-click="openTemplate()"><i>open</i></button>
  <button data-ng-click="saveTemplate()"><i>save</i></button>
  <button data-ng-click="deleteTemplate()"><i>del</i></button>
  <button data-ng-click="runTemplate()"><i>run</i></button>
  <div class="preview" data-ng-include="template"></div>
</div>
<pre id="editor"></pre>
<script>
  var editor = ace.edit("editor");
  editor.setTheme("ace/theme/twilight");
  editor.getSession().setMode("ace/mode/html");
  angular.module('editor', ['subkit']).controller('Editor', ['$scope', 'angularSubkit', function($scope, angularSubkit) {
      var subkit = new Subkit({ baseUrl: "@locals.url", apiKey: "@locals.apiKey" });

      $scope.saveTemplate = function(){
        var file = new Blob([editor.getValue()]);
        file.name = $scope.name;
        subkit.upload(file, "template", function(err, data){});
      };
      $scope.openTemplate = function(){
        subkit.download($scope.name, "template", function(err, data){
          editor.setValue(data);        
        });
      };
      $scope.runTemplate = function() {
          $scope.template = '/template/' + $scope.name+"?"+new Date().getTime()+"&apiKey="+"@locals.apiKey";
      };
      $scope.deleteTemplate = function(){
        subkit.delete($scope.name, "template");
        $scope.getTemplates();
      };
      $scope.getTemplates = function() {
        subkit.get("templates", function(err, data){
          $scope.templates = data;
          $scope.$apply();
        });
      };
  }]);
</script>

</body>
</html>
